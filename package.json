{
  "name": "mishka-18",
  "version": "17.0.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "autoprefixer": "9.5.0",
    "browser-sync": "2.26.3",
    "gulp": "4.0.0",
    "@htmlacademy/editorconfig-cli": "1.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "2.6.x",
    "stylelint": "10.1.x",
    "stylelint-config-htmlacademy": "0.1.3"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.16"
  },
  "dependencies": {
    "node-sass": "^4.13.0"
  }
}
